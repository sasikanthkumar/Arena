<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        //should not keep android: thats before lolli
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionBarOverlay">true</item>

    </style>

    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!--Moving toolbar-->
    <style name="MovingToolbarTheme" parent="MainTheme">


    </style>

    <style name="MainTheme" parent="Theme.AppCompat">

        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>

        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="ParallaxTheme" parent="ParallaxTheme.Base">

    </style>

    <style name="ParallaxTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/primaryColorDarkParallax</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorButtonNormal">#2196f3</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="hideOnContentScroll">true</item>

    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>


        <item name="android:windowExitAnimation">@anim/grow_from_bottom</item>


    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>


</resources>
