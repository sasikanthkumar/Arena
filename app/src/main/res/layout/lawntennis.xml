<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    app:parallax_factor="1.9"
    tools:context=".SubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/item_background"
                    android:gravity="center"
                    android:text="PARALLAXED"
                    android:textSize="50sp"
                    tools:ignore="HardcodedText" />
                    -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lawntennis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:text="MEN'S and WOMEN'S -:"
            android:textAppearance="@android:style/TextAppearance.Large"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:text="@string/rules"
            android:textAppearance="@android:style/TextAppearance.Large"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:text="1) Team Event. A minimum of 2 and maximum of 4 players in a team.\n2) Davis Cup format – 2 singles matches and a decider doubles match in case of a draw.\n3) Group Stage – 1 set for each singles and doubles. Top 2 teams from each group qualify. The number of groups will be decided based on the number of teams participating. The semis and finals will be a best of 15 (8 games to win) or 17 (9 games to win) games.\n4) Player match-ups - Player 1 and Player 2 from one team will play the corresponding Player 1 and Player 2 from the opponents' side. (Before each match the teams can decide who their two players will be). The teams can decide their doubles players after the two singles matches get over.\n5) If two teams have the same number of wins, the one with higher number of singles match wins will be placed higher in the group. Further clashes, if any, will be decided by the difference between games won and lost.\n"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:ignore="HardcodedText" />




    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>