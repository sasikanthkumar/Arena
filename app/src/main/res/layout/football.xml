<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="→Squads of not more than 18\n→Matches will be 11v11 and played with FIFA rules. \n→Referee's decision shall be final.\n→Only three substitutes allowed every match.\n→Matches will be of 20mins each half with a five min break."
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="@string/group_stage"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="HardcodedText"        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:textColor="@android:color/black"

        android:text="3 points for a win.\n1 point each for a draw.\nIn case of a tie in a knock out match, penalties will decide the winner."
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:ignore="HardcodedText" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#E6E6E6" />

    <TextView
        android:id="@+id/eventManagers2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Event Managers"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Shantanu Bhardwaj"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:autoLink="phone"
        android:paddingBottom="20dp"
        android:text="+91-9912608166"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColorLink="@android:color/holo_blue_dark" />


</LinearLayout>

