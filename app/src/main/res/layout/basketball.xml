<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="@string/rules"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="→FIBA rules applicable.\n→10 minutes each quarter with 2 minute break between the quarters and 5 minutes at half time (unless otherwise stated).\n→Teams should report to the basket ball court half an hour before their match.\n→All the players of the team should have same colour of jersey with printed numbers.\n→Use of abusive or foul language during the play can lead to technical fouls or expulsion depending on the referee and the organizing committee.\n→No players should have anything on his/her hand or neck (wrist watch, necklace, ring, kada, bracelet etc.) jewellery of any kind is not allowed and nails have to be cut.\n→Maximum 12 players are allowed in a team.\n"

        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="In case of any quarrels, the decision of the management will be final.\n"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#fffffffc" />

    <TextView
        android:id="@+id/eventManagers6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Event Managers"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:text="Rishab Kapur"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:autoLink="phone"
        android:paddingBottom="20dp"
        android:text="+91-8465047480"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColorLink="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Meha Sadasivam"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:autoLink="phone"
        android:paddingBottom="20dp"
        android:text="+91-9912651622"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColorLink="@android:color/holo_blue_dark" />


</LinearLayout>

