<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arena15"
    tools:context="org.arenatest.bits.arena_test.EventManagersFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/manager1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="test"
                android:textColor="@android:color/black"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/phmanager1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoLink="phone"
                android:gravity="center"
                android:text="test" />

            <TextView
                android:id="@+id/manager2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="test"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/phmanager2"
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoLink="phone"
                android:gravity="center"
                android:text="test" />

            <TextView
                android:id="@+id/manager3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="test"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/phmanager3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoLink="phone"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="test" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
