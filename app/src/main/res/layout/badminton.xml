<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:text="MEN"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:textColor="@android:color/black"

        android:text="Events:Team"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:textColor="@android:color/black"

        android:text="@string/rules"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="→Format of Play : Best of 5(in the order), Singles(Men),Singles(Men), Doubles(Men), Doubles(Men),Singles(Men).\n→Each match(singles/doubles) is best of 3 sets of 21 points.\n→Teams for every game are submitted before the match (specifying who will be playing 1st singles, 2nd singles, 1st doubles, 2nd doubles     and 3rd singles). This team can not be changed after submission.\n→Latest IBF rules will be followed.\n→Teams of maximum 5 players and minimum 4 players.\n→A player can play only two matches (one singles and one doubles).\n"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="WOMEN"
        android:textColor="@android:color/black"

        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="Events:Team"
        android:textColor="@android:color/black"

        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="@string/rules"
        android:textColor="@android:color/black"

        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="→Format of Play : Best of 3(in the order), Singles(Women), Doubles(Women), Singles(Women).\n→Each match(singles/doubles) is best of 3 sets of 21 points.\n→Teams for every game are submitted before the match (specifying who will be playing 1st singles, 2nd singles, 1st doubles,2nd doubles     and 3rd singles). This team can not be changed after submission.\n→Latest IBF rules will be followed.\n→Teams of maximum 4 players and minimum 2 players.\n"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#fffffffc" />

    <TextView
        android:id="@+id/eventManagers3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Event Managers"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Balu Sai"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:autoLink="phone"
        android:paddingBottom="20dp"
        android:text="+91-9010526852"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColorLink="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Chandrasekhar K"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:autoLink="phone"
        android:paddingBottom="20dp"
        android:text="+91-9603246400"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColorLink="@android:color/holo_blue_dark" />

</LinearLayout>

